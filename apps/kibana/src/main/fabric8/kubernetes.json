{
  "apiVersion": "v1beta2",
  "kind": "Config",
  "id": "kibana-config",
  "items": [
    {
      "apiVersion": "v1beta2",
      "kind": "ReplicationController",
      "id": "kibana-controller",
      "desiredState": {
        "replicas": 1,
        "replicaSelector": {
          "component": "kibana-viewer"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "version": "v1beta2",
              "id": "kibana-server",
              "containers": [
                {
                  "name": "kibana-image",
                  "image": "jimmidyson/kibana4:latest",
                  "imagePullPolicy": "PullIfNotPresent",
                  "ports": [
                    {
                      "name": "kibana-port",
                      "containerPort": 5601
                    }
                  ],
                  "env": [
                    {
                      "name": "ELASTICSEARCH_SERVICE_NAME",
                      "value": "ELASTICSEARCH"
                    }
                  ]
                }
              ]
            }
          },
          "labels": {
            "component": "kibana-viewer"
          }
        }
      }
    },
    {
      "apiVersion": "v1beta2",
      "kind": "Service",
      "id": "kibana-service",
      "containerPort": "kibana-port",
      "port": 80,
      "selector": {
        "component": "kibana-viewer"
      }
    }
  ]
}
