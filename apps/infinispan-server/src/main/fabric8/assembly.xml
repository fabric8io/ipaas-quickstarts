<assembly>
    <dependencySets>
        <dependencySet>
            <includes>
                <include>io.fabric8:kubernetes-api</include>
                <include>io.fabric8:fabric8-utils</include>
                <include>org.apache.cxf:*</include>
                <include>org.apache.neethi:*</include>
                <include>org.yaml:*</include>
                <include>org.json:*</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.jar</outputFileNameMapping>
            <outputDirectory>modules/system/layers/base/io/fabric8/kubernetes/main</outputDirectory>
        </dependencySet>
        <dependencySet>
            <includes>
                <include>io.fabric8:fabric8-jgroups</include>
            </includes>
            <outputFileNameMapping>${artifact.artifactId}-${artifact.version}.jar</outputFileNameMapping>
            <outputDirectory>modules/system/layers/base/io/fabric8/jgroups/main</outputDirectory>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <!--
             Using resource filtering here throws an NPE (docker maven plugin bug?).
             Until it gets fixed, we filter in the process resouces phase and just copy the filtered resources.
            -->
            <directory>${project.build.directory}/filtered-resources</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <filtered>false</filtered>
        </fileSet>
    </fileSets>
</assembly>
