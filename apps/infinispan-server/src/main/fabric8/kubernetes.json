{
  "id": "infinispan-config",
  "kind": "Config",
  "apiVersion": "v1beta1",
  "name": "infinispan-config",
  "description": "Creates an infinispan pod & service",
  "items": [
    {
      "apiVersion": "v1beta1",
      "kind": "ReplicationController",
      "id": "infinispan-controller",
      "desiredState": {
        "replicas": 3,
        "replicaSelector": {
          "component": "infinispan"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "version": "v1beta1",
              "id": "is",
              "containers": [
                {
                  "name": "infinispan",
                  "image": "${docker.image}",
                  "imagePullPolicy": "PullIfNotPresent",
                  "ports": [
                    {
                      "name": "jgroups-tcp-port",
                      "containerPort": 7600,
                      "protocol": "TCP"
                    },
                    {
                      "name": "infinispan-rest-port",
                      "containerPort": 8080
                    },
                    {
                      "name": "infinispan-remote-port",
                      "containerPort": 9990
                    },
                    {
                      "name": "infinispan-memcached-port",
                      "containerPort": 11211
                    },
                    {
                      "name": "infinispan-hotrod-port",
                      "containerPort": 11222
                    }
                  ]
                }
              ]
            }
          },
          "labels": {
            "component": "infinispan",
            "cluster": "infinispan"
          }
        }
      }
    },
    {
      "apiVersion": "v1beta1",
      "kind": "Service",
      "id": "infinispan-rest",
      "containerPort": "infinispan-rest-port",
      "port": 8080,
      "selector": {
        "component": "infinispan"
      }
    },
    {
      "apiVersion": "v1beta1",
      "kind": "Service",
      "id": "infinispan-remote",
      "containerPort": "infinispan-remote-port",
      "port": 9990,
      "selector": {
        "component": "infinispan"
      }
    },
    {
      "apiVersion": "v1beta1",
      "kind": "Service",
      "id": "infinispan-memcached",
      "containerPort": "infinispan-memcached-port",
      "port": 11211,
      "selector": {
        "component": "infinispan"
      }
    },
    {
      "apiVersion": "v1beta1",
      "kind": "Service",
      "id": "infinispan-hotrod",
      "containerPort": "infinispan-hotrod-port",
      "port": 11222,
      "selector": {
        "component": "infinispan"
      }
    }
  ]
}
