{
  "kind": "List",
  "apiVersion": "v1",
  "items": [
    {
      "kind": "ReplicationController",
      "apiVersion": "v1",
      "metadata": {
        "name": "infinispan",
        "labels": {
          "cluster": "infinispan",
          "component": "infinispan"
        }
      },
      "spec": {
        "replicas": 3,
        "selector": {
          "component": "infinispan"
        },
        "template": {
          "metadata": {
            "labels": {
              "cluster": "infinispan",
              "component": "infinispan"
            }
          },
          "spec": {
            "containers": [
              {
                "name": "infinispan",
                "image": "${docker.image}",
                "ports": [
                  {
                    "name": "jgroups-tcp-port",
                    "containerPort": 7600,
                    "protocol": "TCP"
                  },
                  {
                    "name": "infinispan-rest-port",
                    "containerPort": 8080,
                    "protocol": "TCP"
                  },
                  {
                    "name": "infinispan-remote-port",
                    "containerPort": 9990,
                    "protocol": "TCP"
                  },
                  {
                    "name": "infinispan-memcached-port",
                    "containerPort": 11211,
                    "protocol": "TCP"
                  },
                  {
                    "name": "infinispan-hotrod-port",
                    "containerPort": 11222,
                    "protocol": "TCP"
                  }
                ],
                "imagePullPolicy": "IfNotPresent"
              }
            ]
          }
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "infinispan-rest"
      },
      "spec": {
        "ports": [
          {
            "port": 8080,
            "targetPort": "infinispan-rest-port"
          }
        ],
        "selector": {
          "component": "infinispan"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "infinispan-remote"
      },
      "spec": {
        "ports": [
          {
            "port": 9990,
            "targetPort": "infinispan-remote-port"
          }
        ],
        "selector": {
          "component": "infinispan"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "infinispan-memcached"
      },
      "spec": {
        "ports": [
          {
            "port": 11211,
            "targetPort": "infinispan-memcached-port"
          }
        ],
        "selector": {
          "component": "infinispan"
        }
      }
    },
    {
      "kind": "Service",
      "apiVersion": "v1",
      "metadata": {
        "name": "infinispan-hotrod"
      },
      "spec": {
        "ports": [
          {
            "port": 11222,
            "targetPort": "infinispan-hotrod-port"
          }
        ],
        "selector": {
          "component": "infinispan"
        }
      }
    }
  ]
}
