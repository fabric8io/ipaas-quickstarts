{
  "apiVersion": "v1beta2",
  "kind": "Config",
  "id": "heapster-config",
  "items": [
    {
      "apiVersion": "v1beta2",
      "kind": "ReplicationController",
      "id": "heapster-rc",
      "desiredState": {
        "replicas": 1,
        "replicaSelector": {
          "app": "heapster"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "version": "v1beta2",
              "containers": [
                {
                  "name": "heapster-container",
                  "image": "kubernetes/heapster:latest",
                  "imagePullPolicy": "PullIfNotPresent",
                  "command": [
                    "-kubernetes_master=${KUBERNETES_RO_SERVICE_HOST}:${KUBERNETES_RO_SERVICE_PORT}",
                    "-sink=influxdb",
                    "-sink_influxdb_host=${INFLUXDB_SERVICE_SERVICE_HOST}:${INFLUXDB_SERVICE_SERVICE_PORT}"
                  ]
                }
              ]
            }
          },
          "labels": {
            "app": "heapster"
          }
        }
      }
    }
  ]
}
