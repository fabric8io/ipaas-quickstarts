{
  "kind": "List",
  "apiVersion": "v1",
  "name": "letschat-config",
  "description": "Creates a letschat",
  "items": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "letschat"
      },
      "spec": {
        "ports": [
          {
            "port": 80,
            "targetPort": 5000
          }
        ],
        "selector": {
          "name": "letschat"
        }
      }
    },
    {
      "kind": "ReplicationController",
      "apiVersion": "v1",
      "metadata": {
        "name": "letschat",
        "labels": {
          "name": "letschat"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "name": "letschat"
        },
        "template": {
          "metadata": {
            "name": "letschat",
            "labels": {
              "name": "letschat"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "mongo",
                "name": "letschat-mongodb",
                "ports": [
                  {
                    "containerPort": 27017,
                    "protocol": "TCP"
                  }
                ]
              },
              {
                "image": "fabric8/lets-chat",
                "name": "letschat",
                "ports": [
                  {
                    "containerPort": 5000,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "LCB_DATABASE_URI",
                    "value": "mongodb://127.0.0.1:27017/letschat"
                  }
                ]
              }
            ]
          }
        }
      }
    }
  ]
}
