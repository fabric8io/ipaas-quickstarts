{
  "kind": "List",
  "apiVersion": "v1",
  "description": "Creates a hubot chat bot",
  "items": [
    {
      "apiVersion": "v1",
      "kind": "Service",
      "metadata": {
        "name": "hubot"
      },
      "spec": {
        "ports": [
          {
            "name": "irc",
            "port": 6667,
            "targetPort": 6667
          },
          {
            "name": "http",
            "port": 8080,
            "targetPort": 8080
          }
        ],
        "selector": {
          "name": "hubot"
        }
      }
    },
    {
      "kind": "ReplicationController",
      "apiVersion": "v1",
      "metadata": {
        "name": "hubot",
        "labels": {
          "name": "hubot"
        }
      },
      "spec": {
        "replicas": 1,
        "selector": {
          "name": "hubot"
        },
        "template": {
          "metadata": {
            "name": "hubot",
            "labels": {
              "name": "hubot"
            }
          },
          "spec": {
            "containers": [
              {
                "image": "fabric8/hubot",
                "name": "hubot-container",
                "ports": [
                  {
                    "containerPort": 6667,
                    "protocol": "TCP"
                  },
                  {
                    "containerPort": 8080,
                    "protocol": "TCP"
                  }
                ],
                "env": [
                  {
                    "name": "HUBOT_IRC_SERVER",
                    "value": "localhost"
                  },
                  {
                    "name": "HUBOT_IRC_ROOMS",
                    "value": "#fabric8-bot"
                  },
                  {
                    "name": "HUBOT_IRC_NICK",
                    "value": "fabric8"
                  },
                  {
                    "name": "HUBOT_IRC_DEBUG",
                    "value": "true"
                  },
                  {
                    "name": "KUBERNETES_TRUST_CERT",
                    "value": "true"
                  },
                  {
                    "name": "HUBOT_SCRIPTS_URI",
                    "value": "https://github.com/fabric8io/fabric8-hubot-scripts.git"
                  }
                ]
              },
              {
                "image": "redis",
                "name": "hubot-redis-container"
              },
              {
                "image": "lonli078/go-irc-server",
                "name": "irc-container"
              }
            ]
          }
        }
      }
    }
  ]
}
