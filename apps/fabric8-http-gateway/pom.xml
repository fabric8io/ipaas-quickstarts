  <artifactId>fabric8-http-gateway</artifactId>
  <packaging>jar</packaging>

  <name>Fabric8 :: HTTP Gateway</name>
  <description>Fabric8 HTTP Gateway</description>

  <properties>
    <guava.version>15.0</guava.version>
    <http.port>9090</http.port>

    <docker.env.MAIN>org.jboss.weld.environment.se.StartMain</docker.env.MAIN>
    <docker.port.container.gateway>${http.port}</docker.port.container.gateway>
    <docker.port.host.gateway>${http.port}</docker.port.host.gateway>
    <fabric8.kubernetes.name>fabric8HTTPGateway</fabric8.kubernetes.name>
    <fabric8.label.container>java</fabric8.label.container>
    <fabric8.label.group>defaultGatewayGroup</fabric8.label.group>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.jboss.weld.se</groupId>
      <artifactId>weld-se</artifactId>
    </dependency>
    <dependency>
      <groupId>io.fabric8</groupId>
      <artifactId>gateway-fabric-support</artifactId>
      <version>${fabric8.version}</version>
    </dependency>
    <dependency>
      <groupId>org.slf4j</groupId>
      <artifactId>slf4j-log4j12</artifactId>
    </dependency>
  </dependencies>

  <build>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>

    <plugins>
