{
  "apiVersion": "v1",
  "kind": "List",
  "id": "keycloak-config",
  "items": [
    {
      "apiVersion": "v1",
      "kind": "ReplicationController",
      "id": "keycloak-rc",
      "desiredState": {
        "replicas": 1,
        "replicaSelector": {
          "app": "keycloak"
        },
        "podTemplate": {
          "desiredState": {
            "manifest": {
              "version": "v1",
              "containers": [
                {
                  "name": "keycloak-container",
                  "image": "jboss/keycloak:1.1.0.Beta2",
                  "imagePullPolicy": "PullIfNotPresent",
                  "ports": [
                    {
                      "name": "keycloak-port",
                      "containerPort": 8080
                    }
                  ]
                }
              ]
            }
          },
          "labels": {
            "app": "keycloak"
          }
        }
      }
    },
    {
      "apiVersion": "v1",
      "kind": "Service",
      "id": "keycloak-service",
      "containerPort": "keycloak-port",
      "port": 80,
      "selector": {
        "component": "keycloak-viewer"
      }
    }
  ]
}
