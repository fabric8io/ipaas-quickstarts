{
    "id": "gerrit-config",
    "kind": "Config",
    "apiVersion": "v1beta2",
    "name": "gerrit-config",
    "description": "Creates a Gerrit Server",
    "items": [
        {
            "apiVersion" : "v1beta2",
            "id":"gerrit-service",
            "kind":"Service",
            "port":80,
            "containerPort":8080,
            "selector":{
                "name":"gerrit"
            }
        },
        {
            "apiVersion" : "v1beta2",
            "id":"gerrit-daemon-service",
            "kind":"Service",
            "port":29418,
            "containerPort":29418,
            "selector":{
                "name":"gerrit"
            }
        },
        {
            "kind" : "ReplicationController",
            "id" : "gerrit",
            "apiVersion" : "v1beta2",
            "desiredState" : {
                "replicas" : 1,
                "replicaSelector" : {
                    "name" : "gerrit"
                },
                "podTemplate" : {
                    "desiredState" : {
                        "manifest" : {
                            "version" : "v1beta2",
                            "id" : "gerritPod",
                            "containers" : [ {
                                "image":"edgester/gerrit",
                                "name":"gerrit-container",
                                "ports":[
                                    {
                                        "containerPort":8080,
                                        "protocol":"TCP"
                                    },
                                    {
                                        "containerPort":29418,
                                        "protocol":"TCP"
                                    }]
                            } ]
                        }
                    },
                    "labels" : {
                        "name" : "gerrit"
                    }
                }
            },
            "labels" : {
                "name" : "gerrit"
            }
        }
    ]
}
